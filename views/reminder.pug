extends layout

block main
  header
    h2 Birthday Notification Setting for '#{contact.firstname} #{contact.lastname}'
    if user.testreminder === true
      form(action=`/contacts/${contact.id}/sendTestReminder` method="post") 
        fieldset
          p Single use for testing purposes   
          button.bell(type="submit" value="Save") Send reminder 
            i.fa.fa-send
    form(action=`/contacts/${contact.id}/setReminder` method="post")
      container.container
        ul.ks-cboxtags
          li
            input#dayReminder(type='checkbox' name='day' value='true' checked=JSON.parse(contact.dayreminder) )
            label(for='dayReminder') 1 Day reminder
          li
            input#weekReminder(type='checkbox' name='week' value='true' checked=JSON.parse(contact.weekreminder))
            label(for='weekReminder') 7 Day reminder
          li
            input#monthReminder(type='checkbox' name='month' value='true' checked=JSON.parse(contact.monthreminder))
            label(for='monthReminder') 30 Day reminder
      fieldset    
        button.button(type="submit" value="Save" ) Save 
          i.fa.fa-save
        button.cancelButton(formaction="/contacts" formmethod="get") Cancel

